#!/bin/bash

function usage() {
  echo "Usage: $0 [yyyyMMdd] [yyyyMMdd]"
  exit 1
}

# Print usage if incorrect number of args
[[ $# -gt 2 ]] && usage

START_DATE=$1
STOP_DATE=$2
if [ "$START_DATE" == "" ]; then
    START_DATE="`date +%Y%m%d --date="1 day ago"`"
fi
if [ "$STOP_DATE" == "" ]; then
    STOP_DATE="`date +%Y%m%d --date="1 day ago"`"
fi

echo "Using start date: " $START_DATE
echo "Using stop date: " $STOP_DATE

bin=`dirname "$0"`
bin=`cd "$bin"; pwd`

ES_CONF_PATH="$bin/../conf/elasticsearch.yml"
SERVER_CLASS_NAME="com.mozilla.bagheera.elasticsearch.ElasticSearchIndexer"
JAVA_OPTS="-Xms512m -Xmx512m -XX:+UseParNewGC -XX:+UseConcMarkSweepGC -Des.config=$ES_CONF_PATH -Dbagheera.log.dir=$bin/../logs"

if [ "$BAGHEERA_USER" = "" ]; then
    BAGHEERA_USER="$USER"
fi

if [ "$HADOOP_CONF" = "" ]; then
    HADOOP_CONF="/etc/hadoop/conf"
fi

if [ "$HBASE_CONF" = "" ]; then
    HBASE_CONF="/etc/hbase/conf"
fi

# if this is a developer then use the main jar in the build directory
if [ -d $bin/../build/lib ]; then
    MAIN_JAR_PATH="$bin/../build/lib/bagheera-*.jar"
else
    MAIN_JAR_PATH="$bin/../bagheera-*.jar"
fi

CLASSPATH="$bin/../conf":"$HADOOP_CONF":"$HBASE_CONF"
# add main jar
for lib in `ls $MAIN_JAR_PATH`; do
    CLASSPATH=${CLASSPATH}:$lib
done    

# add dependency libs
for lib in `ls $bin/../lib/*.jar`; do
    CLASSPATH=${CLASSPATH}:$lib
done

# create logs dir if it doesn't exist
if [ ! -d $bin/../logs ]; then
    mkdir -p $bin/../logs
fi

java $JAVA_OPTS -cp $CLASSPATH $SERVER_CLASS_NAME $START_DATE $STOP_DATE
RETVAL=$?

exit $RETVAL
